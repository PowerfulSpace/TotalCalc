@model CalculatorViewModel

@{
    ViewData["Title"] = "Онлайн калькулятор";
}


<style>
    /* Применяем box-shadow к кнопке с классом .btn-muted */
    .btn-muted {
        box-shadow: 0 0 0 0.25rem rgba(255, 99, 71, 0.5); /* Оранжевый ореол */
    }

        /* Если нужно добавить эффекты при фокусе */
        .btn-muted:focus {
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.5); /* Синий ореол при фокусе */
            outline: none;
        }
</style>


<div class="container mt-5 col-7">
    <h1 class="text-center mb-4">Calculator</h1>
    <!-- Верхний блок ввода -->
    <div class="row mb-3">
        <div class="col-12">
            <form id="calculator-form">
                <input type="text" class="form-control text-end fs-1" id="display" name="display" placeholder="0" readonly style="height: 60px;">
            </form>
        </div>
    </div>

    <!-- Основной блок калькулятора -->
    <div class="row">
        <!-- Цифры -->
        <div class="col-9">
            <div class="row g-0">
                <!-- Цифры -->
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">7</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">8</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">9</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">4</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">5</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">6</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">1</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">2</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">3</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">0</button></div>
                <div class="col-4"><button type="button" class="btn btn-muted btn-outline-dark w-100 border border-dark border-1 rounded-1 fs-3">.</button></div>
                <div class="col-4"><button type="button" class="btn btn-danger w-100 fs-3">=</button></div>
            </div>
        </div>

        <!-- Операторы -->
        <div class="col-3">
            <div class="row g-0">
                <div class="col-12"><button type="button" class="btn btn-muted btn-outline-secondary w-100 border border-dark border-1 rounded-1 fs-3">+</button></div>
                <div class="col-12"><button type="button" class="btn btn-muted btn-outline-secondary w-100 border border-dark border-1 rounded-1 fs-3">-</button></div>
                <div class="col-12"><button type="button" class="btn btn-muted btn-outline-secondary w-100 border border-dark border-1 rounded-1 fs-3">×</button></div>
                <div class="col-12"><button type="button" class="btn btn-muted btn-outline-secondary w-100 border border-dark border-1 rounded-1 fs-3">÷</button></div>
            </div>
        </div>
    </div>
</div>